{
    "compilerOptions": {
        "outDir": "./../../dist/app",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "declaration": false,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "./**/*.test.ts",
        "./**/*.test.tsx"
    ]
}
