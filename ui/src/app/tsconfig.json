{
    "compilerOptions": {
        "outDir": "./../../dist/app",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "declaration": false,
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "es2018",
            "esnext"
        ],
        "types": ["node", "jest", "react"]
    },
    "include": [
        "./**/*",
        "./src/**/*",
        "./test/**/*",
        "globals.d.ts",
        "embed.go"
    ],
    "exclude": [
        "node_modules",
        "./**/*.test.ts",
        "./**/*.test.tsx"
    ]
}
