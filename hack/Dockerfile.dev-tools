FROM golang:1.12.6 as builder

ADD install.sh .
ADD installers installers

# `make manifests`
RUN ./install.sh kustomize-linux
RUN ./install.sh helm-linux

RUN mkdir -p /home/user && chmod 777 /home/user
RUN HELM_HOME=/home/user/.helm helm init --client-only

# `make codegen`
RUN apt-get update && apt-get install -y zip

RUN ./install.sh swagger-linux
RUN ./install.sh protoc-linux
RUN ./install.sh jq-linux
RUN ./install.sh codegen-tools

# clean-up
RUN mkdir -p /go/pkg && chmod 777 /go/pkg

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
